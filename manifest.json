{
    "manifest_version": 2,
    "version": "0.0.1",

    "applications": {
      "gecko": {
        "id": "patrick-hollweck@gmx.de",
        "strict_min_version": "53.0"
      }
    },

    "author": "Patrick Hollweck - patrick-hollweck@gmx.de",

    "name": "WebSnippets",

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["dist/content.ts"]
        }
    ],

    "background": {
        "scripts": ["dist/background.ts"]
    },

    "browser_action": {
        "default_icon": "assets/icon.png",

        "default_popup": "src/popup/popup.html",
        "default_title": "WebSnippets"
    }
}

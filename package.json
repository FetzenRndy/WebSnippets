{
	"name": "websnippets",
	"version": "1.0.0",
	"license": "MIT",
	"description": "A web extension for snippets on the web",
	"author": "PatrickHollweck <patrick-hollweck@gmx.de>",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"start": "cross-env NODE_ENV=development webpack --config=build/webpack.js --watch --mode=development",
		"prod": "cross-env NODE_ENV=production webpack --config=build/webpack.js --mode=production",
		"format": "prettier --write src/**/*.ts"
	},
	"devDependencies": {
		"@types/chrome": "0.0.63",
		"@types/jest": "^22.2.2",
		"@types/webpack": "^4.1.3",
		"cross-env": "^5.1.4",
		"glob": "^7.1.2",
		"jest": "^22.4.3",
		"prettier": "^1.11.1",
		"ts-jest": "^22.4.2",
		"typescript": "^2.8.1",
		"awesome-typescript-loader": "^5.0.0",
		"webpack": "^4.5.0",
		"webpack-blocks": "^1.0.0",
		"webpack-cli": "^2.0.14"
	},
	"jest": {
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"testMatch": [
			"**/__test__/*.+(ts|js)"
		]
	}
}
